{
  "name": "@balena/jellyfish-action-library",
  "version": "14.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-action-library.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Action library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --fix lib test",
    "unit": "jest test/unit",
    "integration": "jest --runInBand --bail test/integration",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck",
    "compose-test": "docker-compose -f docker-compose.test.yml -f docker-compose.yml up --build --exit-code-from=sut"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.55",
    "@balena/jellyfish-environment": "^4.3.5",
    "@balena/jellyfish-logger": "^3.0.34",
    "@balena/jellyfish-mail": "^2.0.56",
    "@balena/jellyfish-metrics": "^1.0.294",
    "@balena/jellyfish-plugin-base": "^2.1.175",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "blueimp-md5": "^2.18.0",
    "date-fns": "^2.22.1",
    "googleapis": "^78.0.0",
    "is-base64": "^1.1.0",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^5.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/ci-task-runner": "^0.3.3",
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-config": "^1.3.3",
    "@balena/jellyfish-core": "^4.0.0",
    "@balena/jellyfish-plugin-default": "^16.0.0",
    "@balena/jellyfish-queue": "^1.0.178",
    "@balena/jellyfish-test-harness": "^5.0.2",
    "@balena/jellyfish-types": "^0.7.0",
    "@balena/jellyfish-worker": "^7.0.5",
    "@balena/lint": "^6.1.1",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.35",
    "@types/blueimp-md5": "^2.18.0",
    "@types/is-base64": "^1.1.0",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/nock": "^11.1.0",
    "@types/semver": "^7.3.6",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "errio": "^1.2.2",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.3",
    "typed-error": "^3.2.1",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.4"
  },
  "peerDependencies": {
    "@balena/jellyfish-core": "^4.0.0",
    "@balena/jellyfish-plugin-default": "^16.0.0",
    "@balena/jellyfish-queue": "^1.0.178",
    "@balena/jellyfish-worker": "^7.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
