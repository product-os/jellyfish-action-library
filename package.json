{
  "name": "@balena/jellyfish-action-library",
  "version": "8.1.40",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-action-library.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Action library for Jellyfish",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js}"
    ],
    "modules": [
      "lib"
    ]
  },
  "scripts": {
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/*.js lib/*/*.js > README.md",
    "postinstall": "if [ -z \"$CI\" ] && [ -d \".git\" ]; then husky install; fi"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.6",
    "@balena/jellyfish-environment": "^3.0.1",
    "@balena/jellyfish-logger": "^1.0.57",
    "@balena/jellyfish-mail": "^0.0.206",
    "@balena/jellyfish-metrics": "^0.1.125",
    "@balena/jellyfish-plugin-base": "^1.2.41",
    "@balena/jellyfish-uuid": "^1.0.84",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "blueimp-md5": "^2.18.0",
    "date-fns": "^2.20.1",
    "googleapis": "^67.1.1",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.21",
    "request-promise": "^4.2.6",
    "skhema": "^5.3.3",
    "typed-errors": "^1.1.0"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-core": "^2.12.65",
    "ava": "^3.15.0",
    "catch-uncommitted": "^1.6.2",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-lodash": "^7.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "fast-json-patch": "^3.0.0-1",
    "husky": "^5.2.0",
    "jsdoc-to-markdown": "^7.0.1",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.11",
    "sinon": "^10.0.0",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "npm run doc",
      "git add README.md"
    ]
  }
}
