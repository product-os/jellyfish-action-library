{
  "name": "@balena/jellyfish-action-library",
  "version": "10.1.34",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-action-library.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Action library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint --typescript lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --typescript --fix lib test",
    "unit": "make test-unit",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.25",
    "@balena/jellyfish-environment": "^4.1.17",
    "@balena/jellyfish-logger": "^2.1.72",
    "@balena/jellyfish-mail": "^2.0.6",
    "@balena/jellyfish-metrics": "^1.0.222",
    "@balena/jellyfish-plugin-base": "^2.1.100",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "blueimp-md5": "^2.18.0",
    "date-fns": "^2.21.3",
    "googleapis": "^73.0.0",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.21",
    "skhema": "^5.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/ci-task-runner": "^0.2.154",
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-core": "^2.13.134",
    "@balena/jellyfish-plugin-default": "^9.8.17",
    "@balena/jellyfish-queue": "^1.0.95",
    "@balena/jellyfish-test-harness": "^2.0.237",
    "@balena/jellyfish-types": "^0.5.120",
    "@balena/jellyfish-worker": "^4.4.29",
    "@balena/lint": "^5.4.2",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.35",
    "@types/blueimp-md5": "^2.18.0",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/nock": "^11.1.0",
    "@types/sinon": "^10.0.0",
    "@types/uuid": "^8.3.0",
    "catch-uncommitted": "^2.0.0",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "errio": "^1.2.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nock": "^13.0.11",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "sinon": "^10.0.1",
    "ts-jest": "^26.5.6",
    "typed-error": "^3.2.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
